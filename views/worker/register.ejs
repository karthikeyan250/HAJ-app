<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="far fa-id-card"></i> Register
        </h1>
        <%- include('../partials/messages') %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            /> 
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="mobno">Phone Number</label>
            <input
              type="number"
              id="mobno"
              name="mobno"
              class="form-control"
              placeholder="Enter phone number"
              value="<%= typeof mobno != 'undefined' ? mobno : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="work">Works known</label>
            <input
              type="text"
              id="work"
              name="work"
              class="form-control"
              placeholder="Enter one or two Works you know"
              value="<%= typeof work != 'undefined' ? work : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="active">Active</label>
            <input
              type="text"
              id="active"
              name="active"
              class="form-control"
              placeholder="type available if u r ready to work"
              value="<%= typeof active != 'undefined' ? active : '' %>"
            />
          </div>


          <div class="form-group">
            <label >photo</label>
            <input type="file" name="cover"  class="filepond">
          </div>
           
          <!--Role hidden-->
          <input  type="hidden" name="role" value="worker">


          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>