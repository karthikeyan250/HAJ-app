<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="far fa-id-card"></i> Register
        </h1>
        <%- include('../partials/messages') %>
        <form action="/users/clientregister" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            /> 
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="mobno">Phone Number</label>
            <input
              type="number"
              id="mobno"
              name="mobno"
              class="form-control"
              placeholder="Enter phone number"
              value="<%= typeof mobno != 'undefined' ? mobno : '' %>"
            />
            <!-- worksknown hidden-->
          <input  type="hidden"  name="work" value="no">

          </div>

          
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
            <!-- hidden active-->
          <input  type="hidden" name="active" value="no">

          <!-- hidden role-->
          <input  type="hidden" name="role" value="client">
          </div>

          

          <div class="form-group">
            <label >photo</label>
            <input type="file" name="cover"  class="filepond">
          </div>



          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
        <p class="lead mt-4">Want to join HAJ as a worker?  <a href="/users/register">Register</a></p>
      </div>
    </div>
  </div>